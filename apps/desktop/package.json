{
  "name": "@jarvis/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "predev": "npm run -w @jarvis/shared build",
    "dev": "concurrently -k \"vite\" \"electron .\"",
    "build": "vite build && electron-builder --projectDir ../../ --config electron-builder.desktop.json",
    "build:dir": "vite build && electron-builder --projectDir ../../ --config electron-builder.desktop.json --win --dir",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@jarvis/shared": "0.1.0",
    "jszip": "^3.10.1",
    "pinia": "^2.2.6",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "32.3.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9.16.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^4.0.18"
  }
}
