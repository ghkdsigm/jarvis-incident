generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  name       String
  createdAt  DateTime    @default(now())
  isOnline   Boolean     @default(false)
  lastSeenAt DateTime?
  members    RoomMember[]
  messages   Message[]
  aiRequests AiRequest[]
}

model Room {
  id        String      @id @default(uuid())
  type      String
  title     String
  createdBy String
  createdAt DateTime    @default(now())
  members   RoomMember[]
  messages  Message[]
  aiRequests AiRequest[]
}

model RoomMember {
  roomId   String
  userId   String
  role     String      @default("member")
  joinedAt DateTime    @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([roomId, userId])
}

model Message {
  id           String   @id @default(uuid())
  roomId       String
  senderType   String
  senderUserId String?
  content      String
  createdAt    DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [senderUserId], references: [id], onDelete: SetNull)
}

model AiRequest {
  id         String   @id @default(uuid())
  roomId     String
  messageId  String?
  requestedBy String
  model      String
  status     String
  latencyMs  Int?
  tokensIn   Int?
  tokensOut  Int?
  createdAt  DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [requestedBy], references: [id], onDelete: Cascade)
}

model IdeaCard {
  id              String   @id @default(uuid())
  roomId          String
  createdBy       String?
  sourceMessageId String?
  kind            String   @default("manual") // manual | weekly_ai
  weekStart       DateTime?

  title   String
  content Json
  graph   Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  room          Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user          User?    @relation(fields: [createdBy], references: [id], onDelete: SetNull)
  sourceMessage Message? @relation(fields: [sourceMessageId], references: [id], onDelete: SetNull)

  @@index([roomId, createdAt])
  @@index([roomId, weekStart])
  @@index([sourceMessageId])
}
